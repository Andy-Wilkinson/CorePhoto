<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp1.1</TargetFramework>
    <DebugType>portable</DebugType>
    <AssemblyName>CorePhotoInfo</AssemblyName>
    <OutputType>Exe</OutputType>
    <PackageId>CorePhotoInfo</PackageId>
    <PackageTargetFallback>$(PackageTargetFallback);dnxcore50</PackageTargetFallback>
    <RuntimeFrameworkVersion>1.1.0</RuntimeFrameworkVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Buffers" Version="4.0.0" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.0.0" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.1.1" />
    <PackageReference Include="System.Threading.Tasks.Parallel" Version="4.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\..\forks\ImageSharp\src\ImageSharp\**\*.cs" Exclude="..\..\..\forks\ImageSharp\src\ImageSharp\obj\**\*.cs" />
    <Compile Include="..\..\..\forks\ImageSharp\src\ImageSharp.Formats.Tiff\**\*.cs" Exclude="..\..\..\forks\ImageSharp\src\ImageSharp.Formats.Tiff\obj\**\*.cs" />
  </ItemGroup>

</Project>
